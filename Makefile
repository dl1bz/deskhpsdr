ifeq ($(UNAME_S), Darwin)
GTK_INCLUDE=`$(PKG_CONFIG) --cflags gtk+-3.0 glib-2.0 gio-2.0`
GTK_LIBS=`$(PKG_CONFIG) --libs gtk+-3.0 glib-2.0 gio-2.0`
